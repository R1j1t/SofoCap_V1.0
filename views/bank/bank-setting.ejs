<body class="hold-transition sidebar-mini">


        <!-- Site wrapper -->
        <div class="wrapper">
            <% include ../partials/bank_header %>
            <!-- =============================================== -->
            <!-- Left side column. contains the sidebar -->
            <% include ../partials/bank_left %>
            <!-- =============================================== -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="pe-7s-world"></i>
                    </div>
                    <div class="header-title">
                        <h1>SofoSupply - Supplier Limits</h1>
                        <small>You can manage supplier limits.</small>
                        <ol class="breadcrumb">
                            <li><a href="/bank"><i class="pe-7s-home"></i> Home</a></li>
                            <li class="active">Dashboard</li>
                        </ol>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <!-- Form controls -->
                        <div class="col-sm-6">
                            <div class="panel panel-bd">
                                <div class="panel-heading">
                                    <div class="panel-title">
                                        <h4>Supplier Limits</h4>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <form name="frmLimit" id="frmLimit" action="/bank/saveSupplierSetting" method="post">
                                        <input type="hidden" name="supplierId" id="supplierId" value="<%=supplierId%>">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Total Limit (INR)</label>
                                            <% if (bankAcc.supplierLimits.length==0){%>
                                                                <input type="text" name="totalLimit" id="totalLimit" class="form-control" placeholder="Total Limit (INR)" value="">
                                                            <%}else {var count=0;%>
                                                                <%for (var i=0;i<bankAcc.supplierLimits.length;i++){%>
                                                                    <%if (bankAcc.supplierLimits[i].supplierId==supplierId) {%>
                                                                        <input type="text" name="totalLimit" id="totalLimit" class="form-control" placeholder="Total Limit (INR)" value="<%=bankAcc.supplierLimits[i].totalLimit%>">
                                                                        <%count++;%>
                                                                    <%}else if(i==bankAcc.supplierLimits.length-1&&count==0) {%>
                                                                        <input type="text" name="totalLimit" id="totalLimit" class="form-control" placeholder="Total Limit (INR)" value="">
                                                                    <%}%>
                                                                <%}%>
                                                            <%}%>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Invoice Discounting Limit (INR)</label>
                                            <% if (bankAcc.supplierInvoiceLimits.length==0){%>
                                                                <input type="text" name="invoiceLimit" id="invoiceLimit" class="form-control" placeholder="Enter Invoice Discounting Limit" value="">
                                                            <%}else {var count=0;%>
                                                                <%for (var i=0;i<bankAcc.supplierInvoiceLimits.length;i++){%>
                                                                    <%if (bankAcc.supplierInvoiceLimits[i].supplierId==supplierId) {%>
                                                                        <input type="text" name="invoiceLimit" id="invoiceLimit" class="form-control" placeholder="Enter Invoice Discounting Limit" value="<%=bankAcc.supplierInvoiceLimits[i].invoiceLimit%>">
                                                                        <%count++;%>
                                                                    <%}else if(i==bankAcc.supplierInvoiceLimits.length-1&&count==0) {%>
                                                                        <input type="text" name="invoiceLimit" id="invoiceLimit" class="form-control" value="" placeholder="Enter Invoice Discounting Limit">
                                                                    <%}%>
                                                                <%}%>
                                                            <%}%>
                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Invoice Funding (%)</label>
                                            <% if (bankAcc.fundingDetail.length==0){%>
                                                                <input type="text" name="invoiceFunding" id="invoiceFunding" class="form-control" value="<%=bankAcc.invoiceFunding%>" placeholder="Invoice Funding">
                                                            <%}else {var count=0;%>
                                                                <%for (var i=0;i<bankAcc.fundingDetail.length;i++){%>
                                                                    <%if (bankAcc.fundingDetail[i].supplierId==supplierId) {%>
                                                                        <input type="text" name="invoiceFunding" id="invoiceFunding" class="form-control" value="<%=bankAcc.fundingDetail[i].invoiceFunding%>" placeholder="Invoice Funding">
                                                                        <%count++;%>
                                                                    <%}else if(i==bankAcc.fundingDetail.length-1&&count==0) {%>
                                                                        <input type="text" name="invoiceFunding" id="invoiceFunding" class="form-control" value="<%=bankAcc.invoiceFunding%>" placeholder="Invoice Funding">
                                                                    <%}%>
                                                                <%}%>
                                                            <%}%>
                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Discounting Rate (%)</label>
                                            <% if (bankAcc.supplierInvoiceRate.length==0){%>
                                                                <input type="text" name="rate" id="rate" class="form-control" value="<%=bankAcc.discountRate%>" placeholder="Enter Discounting Rate">
                                                            <%}else {var count=0;%>
                                                                <%for (var i=0;i<bankAcc.supplierInvoiceRate.length;i++){%>
                                                                    <%if (bankAcc.supplierInvoiceRate[i].supplierId==supplierId) {%>
                                                                        <input type="text" name="rate" id="rate" class="form-control" value="<%=bankAcc.supplierInvoiceRate[i].rate%>" placeholder="Enter Discounting Rate">
                                                                        <%count++;%>
                                                                    <%}else if(i==bankAcc.supplierInvoiceRate.length-1&&count==0) {%>
                                                                        <input type="text" name="rate" id="rate" class="form-control" value="<%=bankAcc.discountRate%>" placeholder="Enter Discounting Rate">
                                                                    <%}%>
                                                                <%}%>
                                                            <%}%>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Interest Charges</label>
                                            <%var interestCharges;%>
                                            <% if (bankAcc.fundingDetail.length==0){%>
                                                                <%interestCharges=bankAcc.interestCharges%>
                                                            <%}else {var count=0;%>
                                                                <%for (var i=0;i<bankAcc.fundingDetail.length;i++){%>
                                                                    <%if (bankAcc.fundingDetail[i].supplierId==supplierId) {%>
                                                                        <%interestCharges=bankAcc.fundingDetail[i].interestCharges%>
                                                                        <%count++;%>
                                                                    <%}else if(i==bankAcc.fundingDetail.length-1&&count==0) {%>
                                                                        <%interestCharges=bankAcc.interestCharges%>
                                                                    <%}%>
                                                                <%}%>
                                                            <%}%>
                                            <select class="form-control" name="interestCharges" id="interestCharges">
                                                <option value="Upfront" <% if(interestCharges=="Upfront") { %>selected="true"<% } %>>Upfront</option>
                                                <option value="Later (On Repayment)" <% if(interestCharges=="Later (On Repayment)") { %>selected="true"<% } %>>Later (On Repayment)</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Inline form -->
                        <div class="col-sm-6">
                            <div class="panel panel-bd">
                                <div class="panel-heading">
                                    <div class="panel-title">
                                        <h4>Buyer Wise Limits </h4>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <form action="/bank/setSupplierBuyersLimit" method="POST">
                                    <input type="hidden" name="supplierId" id="supplierId" value="<%=supplierId%>">
                                    <table id="dataTableExample2" class="table table-striped" style="width: 100%; border: 0px solid;">
                                            <thead>
                                                <tr>
                                                    <th>Buyer Name</th>
                                                    <th>Limit</th>
                                                    <th style="width: 10%;">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (buyersArray!=null){%>
                                                    <% for (var j=0;j<buyersArray.length;j++) { %>
                                                        <input type="hidden" name="buyerNames[]" id="buyerNames[]" value="<%=buyersArray[j].buyerName%>">
                                                        <tr>
                                                            <td>
                                                                <%=buyersArray[j].buyerName%>
                                                            </td>
                                                            <%var count=0;%>
                                                            <%if (!accData.supplierLimits||accData.supplierLimits.length==0){%>
                                                            <td>
                                                                <input name="buyerLimits[]" id="buyerLimits[]" type="text" class="form-control" style="width: 100px;">
                                                                </td>
                                                            <%}else{%>

                                                            <%for (var k=0;k<accData.supplierLimits.length;k++){%>

                                                            <%if (accData.supplierLimits[k].supplierId==supplierId){ count++;%>
                                                                <%var limitCount=0;%>
                                                                <%for (var z=0;z<accData.supplierLimits[k].buyerLimits.length;z++){%>
                                                                    <%if (accData.supplierLimits[k].buyerLimits[z].buyerName==buyersArray[j].buyerName){limitCount++%>
                                                                    <td>
                                                                        <input name="buyerLimits[]" id="buyerLimits[]" type="text" class="form-control" style="width: 100px;" value="<%=accData.supplierLimits[k].buyerLimits[z].buyerLimit%>">
                                                                    </td>
                                                                    <%}else if (z==accData.supplierLimits[k].buyerLimits.length-1&&limitCount==0){%>
                                                                    <td>
                                                                    <input name="buyerLimits[]" id="buyerLimits[]" type="text" class="form-control" style="width: 100px;">
                                                                    </td>
                                                                    <%}%>
                                                                <%}%>
                                                            <%}else if (k==accData.supplierLimits.length-1&&count==0){%>
                                                            <td>
                                                                <input name="buyerLimits[]" id="buyerLimits[]" type="text" class="form-control" style="width: 100px;">
                                                            </td>
                                                            <%}%>
                                                            <%}}%>
                                                            
                                                            <td>
                                                                <a href="#"><button type="button" class="btn btn-success btn-circle m-b-5"><i class="glyphicon glyphicon-eye-open"></i></button></a>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                <% } %>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="5" style="text-align: right;">
                                                        <input type="submit" name="btnSubmit" id="btnSubmit" value="Set Limit" class="btn btn-primary btn-sm">
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                        </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section> <!-- /.content -->
            </div> <!-- /.content-wrapper -->
