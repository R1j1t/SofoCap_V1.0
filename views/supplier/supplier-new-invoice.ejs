                <!-- Main content -->
                <section class="content">



                    


                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel panel-bd lobidrag lobipanel lobipanel-sortable" data-inner-id="yB7xqipKZK" data-index="0">
                                <div class="panel-heading">
                                    <div class="panel-title" style="max-width: calc(100% - 180px);">
                                        <h4>Upload Invoice</h4>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <form action="/supplier/uploadApprovedInvoice" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <fieldset>
                                                    <legend> PO Details </legend>
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Buyer Name</label>
                                                        <select name="buyer" id="buyer" class="form-control">
                                                                <% if (supplierInfo.buyers!=null){%>
                                                                    <% for (var j=0;j<supplierInfo.buyers.length;j++) { %>
                                                                        <option value="<%=supplierInfo.buyers[j].buyerId%>">
                                                                            <%=supplierInfo.buyers[j].buyerName%>
                                                                        </option>
                                                                    <% } %>
                                                                <% } %>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod" style="display: inline-block;">PO Number</label>
                                                        <input type="text" name="purchaseId" id="purchaseId" value="" placeholder="Enter PO Number" class="form-control"> 
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod" style="display: inline-block;">PO Date</label>
                                                        <input type="text" name="poDate" id="poDate" value="" placeholder="Enter PO Date" data-date-format="mm-dd-yyyy" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod" style="display: inline-block;">PO Amount</label>
                                                        <input type="text" name="POTotal" id="POTotal" value="" placeholder="Enter PO Amount" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod" style="display: inline-block;">Credit Period (in days)</label>
                                                        <input type="text" name="creditPeriod" id="creditPeriod" value="" placeholder="Enter Credit Period" class="form-control">
                                                    </div>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-4">
                                                <fieldset>
                                                    <legend>Invoice Details</legend>
                                                    <div class="form-group">
                                                        <label for="txtInvoiceNumber" class="display: inline-block;">Invoice Number</label>
                                                        <input type="text" name="invoiceNumber" id="invoiceNumber" value="" placeholder="Enter Invoice Number" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod">Invoice Date</label>
                                                        <input type="text" name="invoiceDate" id="invoiceDate" value="" placeholder="Enter Invoice Date" data-date-format="mm-dd-yyyy" class="form-control"> 
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod">Total Value (<%=configData.currency%>)</label>
                                                        <input type="text" name="invoiceSubTotal" id="invoiceSubTotal" value="" placeholder="Enter Total Value" class="form-control">
                                                    </div>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-4">
                                                <fieldset>
                                                    <legend>Supporting Documents</legend>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod">Upload PO Copy</label>
                                                        <input class="form-control" name="filePO" id="filePO" aria-describedby="emailHelp" type="file">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod">Upload Invoice Copy</label>
                                                        <input class="form-control" name="file" id="file" aria-describedby="emailHelp" type="file">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod">Upload GRN Copy</label>
                                                        <input class="form-control" name="file_goods" id="file_goods" aria-describedby="emailHelp" type="file">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="txtCreditPeriod">Upload QA Report</label>
                                                        <input class="form-control" name="file_quality" id="file_quality" aria-describedby="emailHelp" type="file">
                                                    </div>
                                                    <div class="form-group" style="float: right;">
                                                        <input type="hidden" name="invoiceRate" id="invoiceRate" value="1">
                                                        <input type="hidden" name="buyerId" id="buyerId" value="">
                                                        <input name="productName[]" id="txtProductName" type="hidden" value="Test Product">
                                                        <input name="productQty[]" id="txtProductQty" type="hidden" value="1">
                                                        <input name="productPrice[]" id="txtProductPrice" type="hidden" value="0">
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </div>
                                                </fieldset>
